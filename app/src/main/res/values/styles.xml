<resources>

    <!-- 这里还得提醒一下,由于我们使用了ToolBar来替换系统默认的ActionBar,所以必须要在
/res/values/style.xml中配置隐藏ActionBar和title. -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <!--隐藏ActionBar和标题-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--ToolBar的颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏的颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--EditText,RadioButton,CheckBox的点击效果颜色-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="EnterExitAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/enter_anim</item>
        <item name="android:windowExitAnimation">@anim/exit_anim</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#969696</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
