<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/sl"
        android:text="ScrollView"
        android:background="#ff2020"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>



    <Button
        android:id="@+id/rv"
        android:text="RecycerView"
        android:layout_below="@+id/sl"
        android:layout_marginTop="20dp"
        android:background="#ff2020"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/bs_dialog"
        android:text="bottom_sheet_dialog"
        android:layout_below="@+id/rv"
        android:layout_marginTop="20dp"
        android:background="#ff2020"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/beautiful"
        android:text="一个漂亮的demo"
        android:layout_below="@+id/bs_dialog"
        android:layout_marginTop="20dp"
        android:background="#ff2020"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</RelativeLayout>
